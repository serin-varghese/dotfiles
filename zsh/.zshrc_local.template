# alias bastion="az network bastion tunnel --name BASTION_NAME --resource-group RG_NAME --target-resource-id /subscriptions/SUBSCRIPTION_ID/resourceGroups/RG_NAME/providers/Microsoft.Compute/virtualMachines/VM_NAME --resource-port 22 --port 50022"
