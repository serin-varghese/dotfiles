# =============================================================================
# EditorConfig - Consistent Coding Style Across Editors
# =============================================================================
# https://editorconfig.org
# Supported by VSCode, PyCharm, Vim, Emacs, Sublime, and many others

# Top-most EditorConfig file
root = true

# =============================================================================
# Default Settings (All Files)
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# =============================================================================
# Python Files
# =============================================================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black's default

[*.pyi]
indent_style = space
indent_size = 4

# =============================================================================
# YAML Files
# =============================================================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# =============================================================================
# JSON Files
# =============================================================================
[*.json]
indent_style = space
indent_size = 2

# =============================================================================
# TOML Files (pyproject.toml, etc.)
# =============================================================================
[*.toml]
indent_style = space
indent_size = 4

# =============================================================================
# Markdown Files
# =============================================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve double-space line breaks

# =============================================================================
# Shell Scripts
# =============================================================================
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# =============================================================================
# Web Files
# =============================================================================
[*.{html,css,scss,js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# =============================================================================
# SQL Files
# =============================================================================
[*.sql]
indent_style = space
indent_size = 2

# =============================================================================
# R Files
# =============================================================================
[*.{r,R}]
indent_style = space
indent_size = 2

# =============================================================================
# Configuration Files
# =============================================================================
[{package.json,.prettierrc,.eslintrc,.babelrc}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

# =============================================================================
# Jupyter Notebooks (if editing as JSON)
# =============================================================================
[*.ipynb]
indent_style = space
indent_size = 1

# =============================================================================
# Dockerfile
# =============================================================================
[Dockerfile]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2
